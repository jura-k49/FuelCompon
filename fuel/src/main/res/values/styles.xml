<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="st_title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="st_sub_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sub_title</item>
    </style>

    <style name="st_tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_80</item>
    </style>

    <style name="st_amount">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="st_button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="st_comment">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/comment</item>
    </style>

    <style name="st_14_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="st_14_black_50">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="st_14_black_50_sp8">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="st_16_black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="st_16_black_6">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="st_24_black">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="st_16_white">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseEditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

</resources>
