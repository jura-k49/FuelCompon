<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="st_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="st_sub_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sub_title</item>
    </style>

    <style name="st_amount">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/sub_title</item>
    </style>

    <style name="st_button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/sub_title</item>
    </style>

    <style name="st_comment">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/comment</item>
    </style>

    <style name="st_12_black_35">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/_black_35</item>
    </style>

    <style name="st_12_black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/_black</item>
    </style>

    <style name="st_14_black_50">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/_black_50</item>
    </style>

    <style name="st_16_black_50">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/_black_50</item>
    </style>

    <style name="st_20_black">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/_black</item>
    </style>

</resources>
