<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/pad_24">

    <TextView
        style="@style/st_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nearest_station" />

    <TextView
        style="@style/st_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/h_button"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/more_information" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageAzs"
            android:layout_width="@dimen/d_icon_g"
            android:layout_height="@dimen/d_icon_g"
            android:src="@drawable/azs_active" />
    </LinearLayout>

</LinearLayout>